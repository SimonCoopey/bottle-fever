{
    "reloader": true,
    "debug": true,
    "environment": "dev",
    "db": "data/store.db",
    "server": {
        "http": {
            "bind_address": "0.0.0.0",
            "port": 8000
        }
    },
    "fetcher": {
        "user_agent": "Mozilla/5.0 (Macintosh; Intel Mac OS X 10_8_3) AppleWebKit/537.17 (KHTML, like Gecko) Chrome/24.0.1309.0 Safari/537.17",
        "fetch_timeout": 10,
        "link_timeout": 2,
        "debug_level": 0,
        "min_interval": 900,
        "max_history": 604800,
        "error_threshold": 200,
        "parser": "lxml",
        "#": "chunk size for processing queue",
        "chunk_size": 32,
        "#": "multiprocessing, gevent or mixed",
        "engine": "mixed",
        "#": "number of processes",
        "pool": 8,
        "#": "number of greenlets launched per pool item",
        "mix_pool": 16
    },
    "speedparser": {
        "__comment": "defaults to not cleaning up HTML or encoding",
        "clean_html": false,
        "encoding": false
    },
    "logging": {
        "version": 1,
        "formatters": {
            "http": {
                "format" : "localhost - - [%(asctime)s] %(process)d %(levelname)s %(message)s",
                "datefmt": "%Y/%m/%d %H:%M:%S"
            }
        },
        "handlers": {
            "console": {
                "class"    : "logging.StreamHandler",
                "formatter": "http",
                "level"    : "DEBUG",
                "stream"   : "ext://sys.stdout"
            },
            "ram": {
                "class"    : "utils.InMemoryHandler",
                "formatter": "http",
                "level"    : "WARNING",
                "limit"    : 200
            }
        },
        "loggers": {
            "peewee": {
                "level"   : "WARN",
                "handlers": ["ram","console"]
            }
        },
        "root": {
            "level"   : "DEBUG",
            "handlers": ["ram","console"]
        }
    }
}
